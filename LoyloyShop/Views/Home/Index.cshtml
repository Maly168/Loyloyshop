@{
    ViewData["Title"] = "Home Page";
}

<div class="container">
  <table class="table table-bordered">
    <thead>
      <tr>
        <th scope="col">Name</th>
        <th scope="col">Type</th>
       @* <th scope="col">Color</th>
        <th scope="col">Engine Number</th>
        <th scope="col">Frame Number</th>
        <th scope="col">Plate Number</th>
        <th scope="col">Made Year</th>
        <th scope="col">Power</th>*@
        <th scope="col">Price</th>
        <th scope="col">Created On</th>
        <th scope="col">Modified On</th>
        <th scope="col">Status</th>
        <th scope="col">Action</th>
      </tr>
    </thead>
    <tbody>
      @foreach (var prod in (List<Products>)ViewBag.Product)
            {
            <tr class="">
                <td> @Html.ActionLink( @prod.Name, "UpdateProduct", "Home")</td>
                <td>@prod.Type</td>
                <td>@prod.PriceBuy</td>
                <td>@prod.CreatedOn</td>
                <td>@prod.ModifiedOn</td>
                <td>@prod.Status</td>
                <td>
                    <a asp-action="Edit" asp-route-id="@prod.Id">Edit</a> |
                    <a asp-action="Details" asp-route-id="@prod.Id">Details</a>
                </td>
              </tr>
            }
    </tbody>
  </table>
 @Html.ActionLink("Create", "AddProduct", "Home")

</div>
