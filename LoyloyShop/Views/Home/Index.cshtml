@{
    ViewData["Title"] = "Home Page";
}

<div class="container">
  <table class="table">
    <thead>
      <tr>
        <th>Name</th>
        <th>Type</th>
        <th>Color</th>
        <th>Engine Number</th>
        <th>Frame Number</th>
        <th>Plate Number</th>
        <th>Made Year</th>
        <th>Power</th>
        <th>Price-Buy</th>
        <th>Price-Sell</th>
        <th>Date Buy</th>
        <th>Date Sell</th>
        <th>Modified On</th>
        <th>Status</th>
        <td>Action</td>
      </tr>
    </thead>
    <tbody>
      @foreach (var prod in (List<Products>)ViewBag.Product)
            {
            <tr class="info">
                <td> @Html.ActionLink( @prod.Name, "UpdateProduct", "Home")</td>
                <td>@prod.Type</td>
                <td>@prod.Color</td>
                 <td>@prod.EngineNumber</td>
                <td>@prod.FrameNumber</td>
                <td>@prod.PlateNumber</td>
                 <td>@prod.MadeYear</td>
                <td>@prod.Power</td>
                <td>@prod.PriceBuy</td>
                 <td>@prod.PriceSell</td>
                <td>@prod.CreatedOn</td>
                <td>@prod.DateSell</td>
                <td>@prod.ModifiedOn</td>
                <td>@prod.Status</td>
                <td>
                    <a asp-action="Edit" asp-route-id="@prod.Id">Edit</a> |
                    <a asp-action="Details" asp-route-id="@prod.Id">Details</a>
                </td>
              </tr>
            }
    </tbody>
  </table>
 @Html.ActionLink("Create", "AddProduct", "Home")

</div>
