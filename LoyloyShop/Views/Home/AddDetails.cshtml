@{

  @model Details
  @using (Html.BeginForm("CreateDetails", "Home", FormMethod.Post))
    {
        <input type="hidden" asp-for="ProductId" value="@ViewBag.ProductId" />
          <div class="form-row">
                <div class="form-group col-md-6">
                     <label for="Name">Name</label>
                     @Html.TextBoxFor(m => m.Name , new {@class = "form-control" })
                </div>
                <div class = "form-group col-md-6"></div>
                <div class="form-group col-md-6">
                     <label for="Type">Payment</label>
                     @Html.TextBoxFor(m => m.Payment , new {@class = "form-control" })
                </div>
                 <div class = "form-group col-md-6"></div>
                <div class="form-group col-md-6">
                     <label for="Engine Number">Note</label>
                     @Html.TextBoxFor(m => m.Note , new {@class = "form-control" })
                </div>
                
                <div class="form-group col-md-12">
                    <input type="submit" value="Submit Form"  class="btn btn-primary"/>
                </div>
            </div>
    }

}
