@using LoyloyShop.Enum
@{
    ViewData["Title"] = "Calculation";
}
@using LoyloyShop.Models
@{

  @model CalculationRate
  @using (Html.BeginForm("CalculateRate", "CalculationRate", FormMethod.Post))
    {
          <div class="form-row">
                <div class="form-group col-md-6">
                     <label for="Name">Amount</label>
                     @Html.TextBoxFor(m => m.Amount , new {@class = "form-control" })
                </div>
                <div class="form-group col-md-3">
                     <label for="Type">Period In Months</label>
                     @Html.TextBoxFor(m => m.PeriodInMonth , new {@class = "form-control" })
                </div>
                <div class="form-group col-md-12">
                    <input type="submit" value="Submit Form"  class="btn btn-primary"/>
                </div>
            @if (@Model.Result > 0)
            {
                 <div class="form-group col-md-12">
                    <span class ="align-content-center alert-info">
                        @Model.Result
                    </span>
                </div>
            
            }
         </div>  
    }



}
